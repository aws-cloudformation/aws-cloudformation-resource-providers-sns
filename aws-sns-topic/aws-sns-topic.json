{
    "typeName": "AWS::SNS::Topic",
    "description": "Resource Type definition for AWS::SNS::Topic",
    "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-resource-providers-sns",
    "additionalProperties": false,
    "properties": {
        "DisplayName": {
            "description": "The display name to use for an Amazon SNS topic with SMS subscriptions.",
            "type": "string"
        },
        "KmsMasterKeyId": {
            "description": "The ID of an AWS-managed customer master key (CMK) for Amazon SNS or a custom CMK.",
            "type": "string"
        },
        "Subscription": {
            "description": "The SNS subscriptions (endpoints) for this topic.",
            "type": "array",
            "uniqueItems": true,
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Subscription"
            }
        },
        "Tags": {
            "description": "The list of tags to add to a new topic.",
            "type": "array",
            "uniqueItems": true,
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Tag"
            }
        },
        "TopicName": {
            "description": "The name of the topic you want to create. Topic names must include only uppercase and lowercase ASCII letters, numbers, underscores, and hyphens, and must be between 1 and 256 characters long.",
            "type": "string",
            "minLength": 1,
            "maxLength": 256,
            "pattern": "^[a-zA-Z0-9_-]{1,256}$"
        },
        "Id": {
            "type": "string"
        }
    },
    "definitions": {
        "Tag": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Key": {
                    "type": "string",
                    "minimum": 1,
                    "maximum": 128,
                    "pattern": "^[a-zA-Z0-9_./=+-]{1,128}$"
                },
                "Value": {
                    "type": "string",
                    "minimum": 0,
                    "maximum": 256,
                    "pattern": "^[a-zA-Z0-9_./=+-]{0,256}$"
                }
            },
            "required": [
                "Value",
                "Key"
            ]
        },
        "Subscription": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Endpoint": {
                    "type": "string"
                },
                "Protocol": {
                    "type": "string",
                    "enum": [
                        "http",
                        "https",
                        "email",
                        "email-json",
                        "sms",
                        "sqs",
                        "application",
                        "lambda",
                        "firehose"
                    ]
                }
            },
            "required": [
                "Endpoint",
                "Protocol"
            ]
        }
    },
    "additionalIdentifiers": [
        [
            "/properties/TopicName"
        ]
    ],
    "createOnlyProperties": [
        "/properties/TopicName"
    ],
    "primaryIdentifier": [
        "/properties/Id"
    ],
    "readOnlyProperties": [
        "/properties/Id"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "sns:CreateTopic",
                "sns:TagResource",
                "sns:Subscribe",
                "sns:GetTopicAttributes",
                "sns:ListTagsForResource",
                "sns:ListSubscriptionsByTopic"
            ]
        },
        "read": {
            "permissions": [
                "sns:GetTopicAttributes",
                "sns:ListTagsForResource",
                "sns:ListSubscriptionsByTopic"
            ]
        },
        "update": {
            "permissions": [
                "sns:SetTopicAttributes",
                "sns:TagResource",
                "sns:UntagResource",
                "sns:Subscribe",
                "sns:Unsubscribe",
                "sns:GetTopicAttributes",
                "sns:ListTagsForResource",
                "sns:ListSubscriptionsByTopic"
            ]
        },
        "delete": {
            "permissions": [
                "sns:DeleteTopic",
                "sns:ListSubscriptionsByTopic",
                "sns:Unsubscribe"
            ]
        },
        "list": {
            "permissions": [
                "sns:ListTopics"
            ]
        }
    }
}
